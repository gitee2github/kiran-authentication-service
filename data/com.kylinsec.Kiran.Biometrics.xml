<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <interface name="com.kylinsec.Kiran.Biometrics">

        <method name="GetDevices">
            <arg name="devices" direction="out" type="s">
                <description>The json string is an array that every item contains device type, name and id..</description>
            </arg>
        </method>

        <method name="GetDevicesByType">
            <arg name="device_type" direction="in" type="i">
                <description>The device type. Refer to DeviceType in biometrics-i.h</description>
            </arg>
            <arg name="devices" direction="out" type="s">
                <description>The json string is an array that every item contains name and id..</description>
            </arg>
        </method>

        <method name="GetDevice">
            <arg name="device_type" direction="in" type="i">
                <description>The device type. Refer to DeviceType in biometrics-i.h</description>
            </arg>
            <arg name="device_id" direction="in" type="s">
                <description>The device ID.</description>
            </arg>
            <arg name="device" direction="out" type="o">
                <description>The object path for this device.</description>
            </arg>
        </method>

        <signal name="DeviceAdded">
            <arg name="device_type" direction="in" type="i">
                <description>The device type.</description>
            </arg>
            <arg name="device_id" type="s">
                <description>The device ID.</description>
            </arg>
        </signal>

        <signal name="DeviceDeleted">
            <arg name="device_type" direction="in" type="i">
                <description>The device type.</description>
            </arg>
            <arg name="device_id" type="s">
                <description>The device ID.</description>
            </arg>
        </signal>

    </interface>
</node>
